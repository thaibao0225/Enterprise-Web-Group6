@page "/xem-thoi-han/{id:int}/"
@model Album.Areas.Admin.Pages.Deadlines.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Deadline</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deadline.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline.dl_TimeDeadline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deadline.dl_TimeDeadline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline.dl_Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deadline.dl_Description)
        </dd>
    </dl>
</div>
<hr />
<div>
    <h3>Submission section</h3>
</div>
<div>
    <form method="post" enctype="multipart/form-data">
        <div>
            <input asp-for="@Model.FileUploads" />
            <br />
            @{
                foreach (var item in Model.userFilesList)
                {
                        <div>
                            <img src="~/image/pdf.png" height="30px" width="auto" />
                            <a href="#">@item.Title</a>
                        </div>
                }
            }
        </div>
        <div>
            <br />
            <label>@Model.mess</label>
            <br />
            <input type="checkbox" asp-for="agreeSubmit" />
            <br />
            <label>Agree to Submit</label>
        </div>
        <div>
            @*asp-page="Details"*@
            <button class="btn btn-danger">Upload</button>
        </div>

        
    </form>
</div>
