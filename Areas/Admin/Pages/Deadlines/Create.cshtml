@page "/tao-deadline/"
@model Album.Areas.Admin.Pages.Deadlines.CreateModel
@{
}

@{
    ViewData["Title"] = "Create Deadline";
}

<h4>DeadLine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Deadline.Title" class="control-label"></label>
                <input asp-for="Deadline.Title" class="form-control" />
                <span asp-validation-for="Deadline.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline.dl_TimeDeadline" class="control-label"></label>
                <input asp-for="Deadline.dl_TimeDeadline" class="form-control" />
                <span asp-validation-for="Deadline.dl_TimeDeadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline.dl_Description" class="control-label"></label>
                <input asp-for="Deadline.dl_Description" class="form-control" />
                <span asp-validation-for="Deadline.dl_Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline.dl_Description" class="control-label"></label>
                <select asp-for="strSelectt">
                    @{
                        foreach (var item in Model.ArticleList)                   
                        {
                            <option value=@item.Title>@item.Title</option>
                        }
                    }
                </select>

                <span asp-validation-for="Deadline.dl_Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

